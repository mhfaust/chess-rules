{
    "compilerOptions": {
        "downlevelIteration": true,
        "esModuleInterop": true,
        "module": "system",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "baseUrl": "src",
        "outDir": "lib/",
        "lib": ["es2017"],
        "paths": {
            "*": ["*", "src/*"]
          }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}
