{
    "compilerOptions": {
        "baseUrl": "./src",
        "downlevelIteration": true,
        "esModuleInterop": true,
        "lib": ["es2017"],
        "module": "system",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "outDir": "dist/",
        "paths": {
            "*": ["*", "./src/*"]
          },
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
